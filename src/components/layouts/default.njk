<html lang="{{ config.lang }}" prefix="og: http://ogp.me/ns#">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
    <link rel="alternate" type="application/rss+xml" title="{{ config.title }}" href="{{ config.url }}/feed.xml"/>
    {% include "meta.njk" %}
    <link rel="icon" href="/favicon.png" type="image/png"/>
    <link rel="preconnect" href="https://cdn.jsdelivr.net">
     {% block head %}{% endblock %}

    {% if env.IS_DEV %}
      {# <link rel="stylesheet" href="/assets/css/app.css" /> #}
    <link rel="stylesheet" href="/assets/scss/app.css" />
    {% else %}
      {# <style>{% include "../../../dist/assets/css/app.css" %}</style> #}
      <style>{% include "../../../dist/assets/scss/app.css" %}</style>
    {% endif %}

    <script src="https://cdn.jsdelivr.net/npm/what-input@5.2.6/dist/what-input.min.js" defer></script>
    <script src="/assets/js/app.js" defer></script>
  </head>
  <body class="sans-serif">

    <main tabindex="-1">
      {% include "header.njk" %}

      {% block intro %}{% endblock intro %}
      {% block content %}{% endblock content %}
      {% include "footer.njk" %}
    </main>

    <script>
      {% if not env.IS_DEV %}
        if ('serviceWorker' in navigator) {
          window.addEventListener('load', () => {
            navigator.serviceWorker.register('/service-worker.js');
          });
        }
      {% endif %}
    </script>
  </body>
</html>
