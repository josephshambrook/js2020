{% from "logo.njk" import logo %}

<header class="">
  {% if navigation.items %}
    <nav class="flex items-center pa3 pa4-ns">
      <a class="link dim black b f6 f5-ns dib mr3" href="/" title="Home">{{ logo(100) }}</a>
      {% for item in navigation.items %}
        {% set relExternal = '' %}
        {% set isCurrent = '' %}

        {% if item.external %}
          {% set relExternal = ' rel="noopener noreferrer" target="_blank"' %}
        {% endif %}
        {% if page.url == item.url %}
          {% set isCurrent = ' aria-current="page"' %}
        {% endif %}
        <a href="{{ item.url }}"{{ relExternal | safe }}{{ isCurrent | safe }} class="link dim black b f6 f5-ns dib mr3" title="{{ item.text }}">{{ item.text }}</a>
      {% endfor %}
    </nav>
  {% endif %}
</header>
